<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    application theme starting   -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/title_bag</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="android:textColorPrimary">@color/color_context</item>
        <item name="android:textColorSecondary">@color/color_context</item>
        <item name="colorButtonNormal">@color/title_bag</item>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->
    </style>

    <style name="AppBaseThemeWithWindowIsTranslucent" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <!--    application theme ending   -->

    <!--    text and color style starting   -->
    <style name="size_18_color_212121_bold">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_212121</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="size_14_color_666666">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_666666</item>
    </style>

    <!--    text and color style ending   -->

    <!--    view style starting   -->
    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">0dp</item>
    </style>


    <!--    view style ending   -->


</resources>